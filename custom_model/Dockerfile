FROM tensorflow/tensorflow:2.5.1

WORKDIR .

COPY . .

RUN python3 -m pip install --upgrade pip
RUN pip3 install sklearn pandas tornado joblib google-cloud-storage

# Expose port 8080
EXPOSE 8080

# The command to start the system
ENTRYPOINT ["python3", "prediction_server.py"]